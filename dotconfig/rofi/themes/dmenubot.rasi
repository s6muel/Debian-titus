* {
    background-color:      Black;
    border-color:          White;
    text-color:           White;
    font:            "MesloLGLDZ Nerd Font Mono 16";
}
window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    8px;
    children:   [ horibox ];
}
horibox {
    orientation: horizontal;
    /*children:   [ prompt, entry, listview ];*/
    children:   [ prompt, entry, listview ];
}
listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}
entry {
    expand:     false;
    width:      10em;
    padding: 0px 7px;
    font-weight: bold;
}

element {
    padding: 0px 10px;
}

element selected {
    background-color: SteelBlue;
    font-weight: bold;
}
element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
